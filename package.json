{
  "name": "tex-machina",
  "publisher": "Tony29028",
  "displayName": "TeX-Machina",
  "description": "Interactive LaTeX assistant with symbolic computation, 3D plotting, and bibliography management.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/honey/tex-machina"
  },
  "license": "MIT",
  "keywords": [
    "latex",
    "math",
    "sympy",
    "plotting",
    "bibtex",
    "oeis"
  ],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onView:tex-machina.preview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "TeX-Machina",
      "properties": {
        "tex-machina.laplace.sourceVariable": {
          "type": "string",
          "default": "t",
          "description": "라플라스 변환의 기본 소스 변수 (예: t)"
        },
        "tex-machina.laplace.targetVariable": {
          "type": "string",
          "default": "s",
          "description": "라플라스 변환의 결과 대상 변수 (예: s)"
        },
        "tex-machina.angleUnit": {
          "type": "string",
          "enum": [
            "deg",
            "rad"
          ],
          "default": "deg",
          "description": "회전변환 시 각도의 기본 단위. (deg: 도, rad: 라디안)"
        },
        "tex-machina.plot.datDensity": {
          "type": "integer",
          "default": 500,
          "minimum": 10,
          "maximum": 5000,
          "description": "2D PGFPlots .dat 파일 생성 시 계산할 점의 개수 (밀도)"
        },
        "tex-machina.plot.yMultiplier": {
          "type": "number",
          "default": 5.0,
          "minimum": 1.0,
          "maximum": 50.0,
          "description": "2D 그래프 데이터(.dat) 생성 시 y축 표시 범위를 넘어서 계산할 배수 (Clipping Limit)"
        },
        "tex-machina.plot.lineColor": {
          "type": "string",
          "default": "blue",
          "description": "2D PGFPlots 그래프의 기본 선 색상 (예: blue, red, black, cyan!50!blue)"
        },
        "tex-machina.autoBracing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "스마트 첨자 자동 괄호 (Auto-bracing for Sub/Superscripts) 기능을 활성화합니다. _나 ^ 뒤에 두 글자 이상 입력 시 자동으로 {}로 묶어줍니다."
        }
      }
    },
    "commands": [
      {
        "command": "tex-machina.openCLI",
        "title": "Open TeX-Machina CLI"
      },
      {
        "command": "tex-machina.analyzeWidth",
        "title": "LaTeX: Analyze Formula Width"
      },
      {
        "command": "tex-machina.escapeAutoBracing",
        "title": "LaTeX: Escape Auto-bracing"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tex-machina-explorer",
          "title": "TeX-Machina",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "tex-machina-explorer": [
        {
          "type": "webview",
          "id": "tex-machina.preview",
          "name": "Math Preview"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tex-machina.openCLI",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "editorTextFocus"
      },
      {
        "command": "tex-machina.escapeAutoBracing",
        "key": "escape",
        "when": "editorTextFocus && editorLangId == 'latex' && !suggestWidgetVisible && !findWidgetVisible && !parameterHintsVisible && !editorHasSelection && !inSnippetMode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "mathjax-full": "^3.2.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
