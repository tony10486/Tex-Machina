    "viewsContainers": {
      "activitybar": [
        {
          "id": "tex-machina-explorer",
          "title": "TeX-Machina",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "tex-machina-explorer": [
        {
          "type": "webview",
          "id": "tex-machina.preview",
          "name": "Math Preview"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tex-machina.openCLI",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "editorTextFocus"
      },
      {
        "command": "tex-machina.escapeAutoBracing",
        "key": "escape",
        "when": "editorTextFocus && editorLangId == 'latex' && !suggestWidgetVisible && !findWidgetVisible && !parameterHintsVisible && !editorHasSelection && !inSnippetMode"
      },
      {
        "command": "tex-machina.splitMath",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus && editorLangId == 'latex'"
      },
      {
        "command": "tex-machina.formatUnit",
        "key": "ctrl+shift+' u",
        "mac": "cmd+shift+' u",
        "when": "editorTextFocus && editorLangId == 'latex'"
      },
      {
        "command": "tex-machina.addHat",
        "key": "alt+shift+6",
        "mac": "alt+shift+6",
        "when": "editorTextFocus && editorLangId == 'latex'"
      },
      {
        "command": "tex-machina.addTilde",
        "key": "alt+shift+`",
        "mac": "alt+shift+`",
        "when": "editorTextFocus && editorLangId == 'latex'"
      },
      {
        "command": "tex-machina.addDot",
        "key": "alt+.",
        "mac": "alt+.",
        "when": "editorTextFocus && editorLangId == 'latex'"
      },
      {
        "command": "tex-machina.toggleMathNav",
        "key": "ctrl+shift+' l",
        "mac": "cmd+shift+' l",
        "when": "editorTextFocus && editorLangId == 'latex'"
      },
      {
        "command": "tex-machina.mathNavRight",
        "key": "alt+right",
        "mac": "alt+right",
        "when": "editorTextFocus && editorLangId == 'latex'"
      },
      {
        "command": "tex-machina.mathNavLeft",
        "key": "alt+left",
        "mac": "alt+left",
        "when": "editorTextFocus && editorLangId == 'latex'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "mathjax-full": "^3.2.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
