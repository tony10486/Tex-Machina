{
  "name": "tex-machina",
  "displayName": "tex-machina",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:tex-machina.preview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "TeX-Machina",
      "properties": {
        "tex-machina.laplace.sourceVariable": {
          "type": "string",
          "default": "t",
          "description": "라플라스 변환의 기본 소스 변수 (예: t)"
        },
        "tex-machina.laplace.targetVariable": {
          "type": "string",
          "default": "s",
          "description": "라플라스 변환의 결과 대상 변수 (예: s)"
        },
        "tex-machina.angleUnit": {
          "type": "string",
          "enum": [
            "deg",
            "rad"
          ],
          "default": "deg",
          "description": "회전변환 시 각도의 기본 단위. (deg: 도, rad: 라디안)"
        }
      }
    },
    "commands": [
      {
        "command": "tex-machina.openCLI",
        "title": "Open TeX-Machina CLI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tex-machina-explorer",
          "title": "TeX-Machina",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "tex-machina-explorer": [
        {
          "type": "webview",
          "id": "tex-machina.preview",
          "name": "Math Preview"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tex-machina.openCLI",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
